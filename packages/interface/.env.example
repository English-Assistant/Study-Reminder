# .env.example

# PostgreSQL 数据库连接字符串
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME?schema=public"

# JWT (JSON Web Token) 配置
JWT_SECRET="your_super_strong_and_long_random_jwt_secret_key"
JWT_EXPIRES_IN="1d" # 例如 1天, 也可以是 1h, 7d, 3600s 等

# 邮件服务 (SMTP) 配置
MAIL_HOST="smtp.example.com"
MAIL_PORT="465" # 或 587
MAIL_SECURE="true" # true for SSL/TLS (port 465), false if using STARTTLS (port 587 and secure:false, then enable STARTTLS in transport options if needed)
MAIL_USER="your_email_username@example.com"
MAIL_PASSWORD="your_email_password_or_app_specific_password"
MAIL_FROM_NAME="Your App Name"
MAIL_FROM_ADDRESS="noreply@example.com" # 或与 MAIL_USER 相同
